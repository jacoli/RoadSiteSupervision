<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_assigned_matter_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jacoli.roadsitesupervision.AssignedMatterCreateActivity">

    <com.jacoli.roadsitesupervision.views.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/title_bar"
        android:layout_above="@+id/submit_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <requestFocus />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="@dimen/cell_height"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:text="主题:"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/edit_text_subject"
                    android:hint="请输入"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="@dimen/cell_height"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:text="交办人:"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/edit_text_sender"
                    android:hint="请输入"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="@dimen/cell_height"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:id="@+id/textView"
                    android:text="承办人:"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/edit_text_receiver"
                    android:hint="请输入"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="@dimen/cell_height"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:text="日期:"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/secondary_text"
                    android:id="@+id/text_view_time"
                    android:text="2017-04-03"
                    />

            </LinearLayout>

            <include layout="@layout/cell_separator"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_cell_height"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:text="交办事项"
                />

            <EditText
                android:layout_width="match_parent"
                android:minHeight="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/editText"
                android:singleLine="false"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:hint="请输入内容"
                />

            <include layout="@layout/cell_separator"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_cell_height"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:text="上传图片（最多9张，可选）"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                />

            <View android:layout_height="64dp"
                android:layout_width="match_parent"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="164dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="@color/accent"
        android:text="发送"
        android:id="@+id/submit_btn" />

</RelativeLayout>
