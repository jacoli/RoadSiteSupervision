<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_supervision_patrol_project_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jacoli.roadsitesupervision.SupervisionPatrol.SupervisionPatrolProjectDetailActivity">

    <com.jacoli.roadsitesupervision.views.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:layout_alignParentBottom="true">

        <org.apmem.tools.layouts.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/flow_layout">

            <TextView
                android:id="@+id/project_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="16dp"
                android:text="单位工程"/>

            <include layout="@layout/cell_separator" />

        </org.apmem.tools.layouts.FlowLayout>

    </ScrollView>

</RelativeLayout>
